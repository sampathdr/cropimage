@{
    ViewData["Title"] = "Image Cropper Pro";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="text-center mb-4">
                <h1 class="display-4"><i class="fas fa-crop-alt me-3"></i>ImageCropperPro</h1>
                <p class="lead">Professional image cropping tool with support for multiple units and formats</p>
            </div>
        </div>
    </div>

    <!-- Upload Section -->
    <div class="row" id="uploadSection">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-upload me-2"></i>Upload Image</h4>
                </div>
                <div class="card-body">
                    <div id="dropZone" class="drop-zone text-center p-5 border border-dashed rounded">
                        <i class="fas fa-cloud-upload-alt fa-3x text-muted mb-3"></i>
                        <h5>Drag & Drop your image here</h5>
                        <p class="text-muted">or click to browse files</p>
                        <input type="file" id="fileInput" accept="image/*" style="display: none;">
                        <button type="button" class="btn btn-outline-primary" onclick="document.getElementById('fileInput').click()">
                            <i class="fas fa-folder-open me-2"></i>Browse Files
                        </button>
                        <div class="mt-3">
                            <small class="text-muted">Supported formats: JPEG, PNG, GIF, WEBP (Max: 10MB)</small>
                        </div>
                    </div>
                    
                    <!-- Upload Progress -->
                    <div id="uploadProgress" class="mt-3" style="display: none;">
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%"></div>
                        </div>
                        <div class="text-center mt-2">
                            <small id="uploadStatus">Uploading...</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cropping Section -->
    <div class="row mt-4" id="croppingSection" style="display: none;">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-crop me-2"></i>Crop Image</h4>
                </div>
                <div class="card-body">
                    <div class="image-container">
                        <img id="cropImage" style="max-width: 100%; display: block;">
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>Crop Settings</h5>
                </div>
                <div class="card-body">
                    <!-- Image Information -->
                    <div class="mb-4">
                        <h6><i class="fas fa-info-circle me-2"></i>Image Information</h6>
                        <div id="imageInfo" class="small text-muted">
                            <div>Dimensions: <span id="imageDimensions">-</span></div>
                            <div>Format: <span id="imageFormat">-</span></div>
                            <div>Size: <span id="imageSize">-</span></div>
                        </div>
                    </div>

                    <!-- Crop Presets -->
                    <div class="mb-4">
                        <h6><i class="fas fa-templates me-2"></i>Presets</h6>
                        <select id="presetSelect" class="form-select">
                            <option value="">Select a preset...</option>
                        </select>
                    </div>

                    <!-- Dimensions -->
                    <div class="mb-4">
                        <h6><i class="fas fa-ruler me-2"></i>Dimensions</h6>
                        <div class="row">
                            <div class="col-6">
                                <label for="cropWidth" class="form-label">Width</label>
                                <input type="number" id="cropWidth" class="form-control" placeholder="Width">
                            </div>
                            <div class="col-6">
                                <label for="cropHeight" class="form-label">Height</label>
                                <input type="number" id="cropHeight" class="form-control" placeholder="Height">
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-6">
                                <select id="unitSelect" class="form-select">
                                    <option value="px">Pixels (px)</option>
                                    <option value="mm">Millimeters (mm)</option>
                                    <option value="cm">Centimeters (cm)</option>
                                    <option value="in">Inches (in)</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <input type="number" id="dpiInput" class="form-control" value="96" placeholder="DPI">
                            </div>
                        </div>
                        <div class="form-check mt-2">
                            <input class="form-check-input" type="checkbox" id="lockAspectRatio">
                            <label class="form-check-label" for="lockAspectRatio">
                                Lock aspect ratio
                            </label>
                        </div>
                    </div>

                    <!-- Transform Options -->
                    <div class="mb-4">
                        <h6><i class="fas fa-sync-alt me-2"></i>Transform</h6>
                        <div class="btn-group w-100 mb-2" role="group">
                            <button type="button" class="btn btn-outline-secondary" id="rotateLeft">
                                <i class="fas fa-undo"></i> 90°
                            </button>
                            <button type="button" class="btn btn-outline-secondary" id="rotateRight">
                                <i class="fas fa-redo"></i> 90°
                            </button>
                        </div>
                        <div class="btn-group w-100" role="group">
                            <button type="button" class="btn btn-outline-secondary" id="flipHorizontal">
                                <i class="fas fa-arrows-alt-h"></i> Flip H
                            </button>
                            <button type="button" class="btn btn-outline-secondary" id="flipVertical">
                                <i class="fas fa-arrows-alt-v"></i> Flip V
                            </button>
                        </div>
                    </div>

                    <!-- Output Settings -->
                    <div class="mb-4">
                        <h6><i class="fas fa-download me-2"></i>Output Settings</h6>
                        <div class="row">
                            <div class="col-6">
                                <label for="outputFormat" class="form-label">Format</label>
                                <select id="outputFormat" class="form-select">
                                    <option value="jpeg">JPEG</option>
                                    <option value="png">PNG</option>
                                    <option value="webp">WebP</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <label for="quality" class="form-label">Quality</label>
                                <input type="range" id="quality" class="form-range" min="1" max="100" value="85">
                                <div class="text-center small"><span id="qualityValue">85</span>%</div>
                            </div>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-primary" id="cropButton">
                            <i class="fas fa-crop me-2"></i>Crop Image
                        </button>
                        <button type="button" class="btn btn-outline-secondary" id="resetButton">
                            <i class="fas fa-undo me-2"></i>Reset
                        </button>
                        <button type="button" class="btn btn-outline-danger" id="newImageButton">
                            <i class="fas fa-plus me-2"></i>New Image
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Preview Section -->
    <div class="row mt-4" id="previewSection" style="display: none;">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="fas fa-eye me-2"></i>Preview & Download</h4>
                </div>
                <div class="card-body text-center">
                    <div id="previewContainer" class="mb-3">
                        <img id="previewImage" class="img-fluid border rounded" style="max-height: 400px;">
                    </div>
                    <div class="mb-3">
                        <input type="text" id="downloadFileName" class="form-control d-inline-block" style="width: auto;" placeholder="filename">
                        <button type="button" class="btn btn-success ms-2" id="downloadButton">
                            <i class="fas fa-download me-2"></i>Download
                        </button>
                    </div>
                    <div id="previewInfo" class="small text-muted"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/imagecropper.js"></script>
}