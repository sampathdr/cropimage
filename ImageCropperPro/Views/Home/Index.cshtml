@{
    ViewData["Title"] = "Home";
}
<div class="row">
    <div class="col-md-6">
        <h3>Upload Image</h3>
        <div id="drop-zone" class="border border-2 border-secondary rounded p-5 text-center">
            <p>Drag & Drop image here or click to select</p>
            <input type="file" id="file-input" accept="image/*" class="d-none" />
        </div>
    </div>
    <div class="col-md-6" id="crop-container" style="display:none;">
        <h3>Crop Preview</h3>
        <div>
            <img id="image-preview" class="img-fluid" />
        </div>
        <div class="mt-3">
            <label for="unit-select" class="form-label">Units</label>
            <select id="unit-select" class="form-select w-auto d-inline-block">
                <option value="px">Pixels</option>
                <option value="mm">Millimeters</option>
                <option value="cm">Centimeters</option>
                <option value="in">Inches</option>
            </select>
            <button class="btn btn-primary ms-2" id="download-btn">Download Cropped Image</button>
        </div>
    </div>
</div>